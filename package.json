{
  "name": "mcp-cartographer",
  "version": "0.1.0",
  "description": "MCP server providing AI agents with a queryable architecture graph",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cartographer": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "imports": {
    "#types": "./dist/types/index.js",
    "#graph/*": "./dist/graph/*.js",
    "#anchors/*": "./dist/anchors/*.js",
    "#mcp/*": "./dist/mcp/*.js",
    "#constraints": "./dist/constraints/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "pretest": "tsc",
    "test": "vitest",
    "test:unit": "vitest --run --exclude=test/cli/**",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "mcp",
    "ai",
    "architecture",
    "graph",
    "codebase",
    "cli"
  ],
  "author": "vyshnavsdeepak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vyshnavsdeepak/cartographer"
  },
  "packageManager": "pnpm@10.6.1",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "lefthook": "^2.0.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.13"
  }
}
